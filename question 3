#include <iostream>
#include <queue>
#include <stack>
using namespace std;

void interleaveQueue(queue<int>& q) {
    int n = q.size();
    stack<int> s;
    
    for (int i = 0; i < n/2; i++) {
        s.push(q.front());
        q.pop();
    }
    
    while (!s.empty()) {
        q.push(s.top());
        s.pop();
    }
    
    for (int i = 0; i < n/2; i++) {
        q.push(q.front());
        q.pop();
    }
    
    for (int i = 0; i < n/2; i++) {
        s.push(q.front());
        q.pop();
    }
    
    while (!s.empty()) {
        q.push(s.top());
        s.pop();
        q.push(q.front());
        q.pop();
    }
}

int main() {
    queue<int> q;
    int n, value;
    
    cout << "Enter number of elements (even number): ";
    cin >> n;
    
    cout << "Enter " << n << " elements: ";
    for (int i = 0; i < n; i++) {
        cin >> value;
        q.push(value);
    }
    
    interleaveQueue(q);
    
    cout << "Interleaved queue: ";
    while (!q.empty()) {
        cout << q.front() << " ";
        q.pop();
    }
    cout << endl;
    
    return 0;
}
